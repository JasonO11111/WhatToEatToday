<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/res_item_shape"
    android:layout_marginBottom="15dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        style="?android:attr/borderlessButtonStyle"
        app:cardCornerRadius="10dp"
        >

        <ImageView
            android:id="@+id/restaurant_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/res1"
            />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        >

        <TextView
            android:id="@+id/restaurant_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="啊旺饭馆（华广店）"
            android:textColor="#000000"
            android:textSize="18sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:baselineAligned="false"
            >

            <ImageView
                android:id="@+id/restaurant_star"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/star"
                android:layout_marginTop="3dp"
                />

            <TextView
                android:id="@+id/restaurant_assess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:text="5.0"
                android:textColor="#FA7C02"
                android:textSize="15sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/restaurant_sale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="月售3344"
                android:textSize="12sp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/restaurant_time"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="60分钟  1.1km"
                android:textSize="12sp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:baselineAligned="false"
            >

            <TextView
                android:id="@+id/restaurant_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="起送￥24  免配送费  人均￥23"
                android:textSize="12sp"
                android:layout_marginTop="3dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:baselineAligned="false"
            >

            <TextView
                android:id="@+id/restaurant_descrition1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="华广饭馆人气第1名"
                android:textSize="12sp"
                android:layout_marginTop="3dp"
                android:textColor="#C6944F"
                android:background="@drawable/text_shape"
                />

            <TextView
                android:id="@+id/restaurant_descrition2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点评高分店铺"
                android:textSize="12sp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"
                android:textColor="#C6944F"
                android:background="@drawable/text_shape"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:baselineAligned="false"
            >

            <TextView
                android:id="@+id/restaurant_discount1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30减1  |  60减5  |  80减8"
                android:textSize="11sp"
                android:layout_marginTop="3dp"
                android:textColor="#CF504A"
                android:background="@drawable/text_shape_red"
                />

            <TextView
                android:id="@+id/restaurant_discount2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4元无门栏红包"
                android:textSize="11sp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"
                android:textColor="#9F7C2E"
                android:background="@drawable/text_shape_yellow"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                >

                <ImageView
                    android:layout_gravity="right"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/pop"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>